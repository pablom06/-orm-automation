# ============================================
# ORM Automation Engine — Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ---- MEDIUM API ----
# Get your token: Medium.com → Settings → Integration Tokens → Generate
MEDIUM_TOKEN=your_medium_integration_token_here

# Leave blank — will be auto-detected from your token
MEDIUM_USER_ID=

# ---- SCHEDULE ----
# When to start publishing (YYYY-MM-DD)
START_DATE=2026-02-11

# "daily" or "every_other_day"
FREQUENCY=daily

# Time to publish (24hr format, used in daemon mode)
PUBLISH_TIME=09:00

# ---- LINKEDIN ----
# Auto-open LinkedIn article editor in browser? (true/false)
AUTO_OPEN_LINKEDIN=true
